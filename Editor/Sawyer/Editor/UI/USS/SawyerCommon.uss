.subtitle-label {
    height: auto;
    width: 100%;
    justify-content: center;
    -unity-text-align:middle-center;
    -unity-font-style: normal;
    color: #cccccc;
    font-size: 16px;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Light.ttf");
    margin-bottom: 75px;
    margin-top: 3%;
}

.button-footer-get_started {
    width: 100%;
    max-width: 150px;
    align-self: center;
    font-size: 14px;
    margin-bottom: 35%;
    background-color: #555555; /* Debug color */
}
.button-footer-launch_sawyer {
    width: 100%;
    max-width: 150px;
    align-self: center;
    margin-top: 10%;
    font-size: 14px;
    position: absolute;
    left: 35%;
    bottom: 15%;
    justify-content: space-evenly;
    background-color: #555555; /* Debug color */
}

.title {
    font-size: 20px;
    -unity-font-style: bold;
    color: var(--sawyer-text);
    margin-bottom: var(--sawyer-spacing-xs);
}

.subtitle {
    font-size: 14px;
    color: var(--sawyer-text-secondary);
    white-space: normal;
}

.title-select-code {
    font-size: 20px;
    -unity-font-style: bold;
    color: var(--sawyer-text);
    -unity-text-align: middle-center;
    margin-bottom: 25px;
    margin-top: 20px;
}

.subtitle-select-code {
    font-size: 14px;
    color: var(--sawyer-text-secondary);
    white-space: normal;
    -unity-text-align: middle-center;
    margin-bottom: 20px;
}
.subtitle-select-code2 {
    font-size: 14px;
    color: var(--sawyer-text-secondary);
    white-space: normal;
    -unity-text-align: middle-center;
    margin-bottom: 50px;
}

.card--select-code {
    background-color: var(--sawyer-card-background);
    border-radius: var(--sawyer-border-radius);
    border-width: 1px;
    border-color: var(--sawyer-border);

    width: 100%;

    flex-direction: column;
    justify-content: center;
}

.card-section {
    background-color: #3F3F3F;
    padding: 40px;
    border-radius: 5px;
    margin-top: 3%;
    width: 80%;
    align-self: center;
    align-items: stretch;
    min-height: 242px;
}

.card-title {
    font-size: 20px;
    -unity-font-style: bold;
    margin-bottom: 8px;
}

.card-subtitle {
    font-size: 13px;
    color: #ccc;
    margin-bottom: 20px;
}

.source-code-button {
    flex-direction: row;
    justify-content: space-between;
    padding: 10px;
    background-color: #515151;
    border-radius: 4px;
    border-width: 0;
    min-height: 72px;
}

.file-title {
    color: #aaa;
    font-size: 15px;
    -unity-font-style: bold;
    -unity-text-align: middle-left;
}
.file-subtitle {
    color: #aaa;
    font-size: 11px;
    -unity-text-align: middle-left;
}

.plus-icon {
    font-size: 20px;
    color: #fff;
}


/* Step Indicator */
.step-indicator-bar {
    width: 80%;
  
    align-self: center;
    /*margin-bottom: var(--sawyer-spacing-md);*/
}
/* Inputs Container */
.inputs-container {
    flex-direction: column;
    margin-right: var(--sawyer-spacing-md);
    margin-top: var(--sawyer-spacing-md);
    margin-left: var(--sawyer-spacing-md);
    width: 100%;
}

.input-wrapper {
    align-items: center;
    width: 100%;
    margin-bottom: var(--sawyer-spacing-md);
}

/* Navigation Buttons */
.nav-buttons {
    width: 80%;
    position: absolute;
    top: 90%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-self: center;
    margin-top: 1%;
}

.card {
    background-color: var(--sawyer-card-background);
    border-radius: var(--sawyer-border-radius);
    border-width: 1px;
    border-color: var(--sawyer-border);
   
    width: 80%;
    margin-top: 3%;
    flex-direction: column;
    justify-content: space-between;
}




.nav-button {
    width: 48px;
    height: 48px;
    background-color: var(--sawyer-secondary);
    border-radius: var(--sawyer-border-radius);
    border-width: 0;
    padding: 0;
    flex-direction: row;
    align-items: center;
    justify-content: center;

}

.nav-button.active {
    background-color: var(--sawyer-primary);
}

.nav-button:hover {
    background-color: var(--sawyer-primary-hover);
}

.nav-button:active {
    background-color: var(--sawyer-primary-active);
}

.nav-button .icon {
    width: 24px;
    height: 24px;
    -unity-background-scale-mode: scale-to-fit;
    -unity-background-image-tint-color: white;
}

/* Error banner */
.error-bar {
    background-color: #282828;
    width: 150%;
    /*padding: var(--sawyer-spacing-sm) var(--sawyer-spacing-md);*/
    flex-direction: row;
    align-items: center;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    position: absolute;
    top: 97.5%;

}

.error-icon {
    width: 20px;
    height: 20px;
    margin-right: var(--sawyer-spacing-sm);
    -unity-background-image-tint-color: white;
}

.validation-error-text {
    color: white;
    flex-grow: 1;
}

/* Optional section styles */
.optional-toggle {
    flex-direction: row;
    align-items: center;
    padding: var(--sawyer-spacing-sm) 0;
    cursor: link;
}

.optional-toggle-text {
    color: var(--sawyer-text-secondary);
    font-size: 14px;
    margin-left: var(--sawyer-spacing-sm);
}

.divider {
    height: 2px;
    width: 100%;
    background-color: #515151;
    margin: var(--sawyer-spacing-sm) 0;
    border-radius: 4px;
}

.optional-section {
    display: flex;
    flex-direction: column;
 
    padding-top: var(--sawyer-spacing-sm);
    padding-bottom: var(--sawyer-spacing-sm);
}

.optional-title {
    font-size: 16px;
    margin-bottom: var(--sawyer-spacing-sm);
    -unity-font-style: bold;
    color: var(--sawyer-text);
    flex-direction: row;
}

.optional-inputs {
    display: none;
    width: 100%;
    flex-direction: row;
    margin: var(--sawyer-spacing-sm);
}

.optional-input-group {
    width: 100%;
    flex-direction: row;
    margin-bottom: var(--sawyer-spacing-md);
}

.input-label {
    flex-direction: row;
    align-items: center;
    margin-bottom: var(--sawyer-spacing-xs);
}

.input-label-text {
    color: var(--sawyer-text-secondary);
    font-size: 14px;
    margin-left: var(--sawyer-spacing-sm);
}

/* Icons */
.icon {
    width: 20px;
    height: 20px;
    -unity-background-scale-mode: scale-to-fit;
}

.icon.key {
    background-image: resource("d_P4_CheckOutRemote");
    -unity-background-image-tint-color: var(--sawyer-text-secondary);
}

.icon.plus-square {
    background-image: resource("d_CreateAddNew");
    -unity-background-image-tint-color: var(--sawyer-text-secondary);
}

.icon.anthropic {
    background-image: resource("Anthropic");
    -unity-background-image-tint-color: #A259FF;
}

.icon.deepseek {
    background-image: resource("Deepseek");
    -unity-background-image-tint-color: #2196F3;
}

.icon.error-icon {
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_error.png");
    width: 15px;
}

/* Utility classes */
.hidden {
    display: none;
}

.flex-row {
    flex-direction: row;
}

.flex-column {
    flex-direction: column;
}

.align-center {
    align-items: center;
}

.justify-center {
    justify-content: center;
}

.flex-grow {
    flex-grow: 1;
}

/* Responsive modifiers */

.modal-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    display: none;
}

.modal-backdrop {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 1);
}

.modal-panel {
    width: 500px;
    background-color: #383838;
    border-radius: 12px;
    padding: 24px;
    flex-direction: column;
    align-items: stretch;
}



.file-tree-view {
    height: 300px;
    margin-bottom: 16px;
    background-color: #151515;
    border-radius: 8px;
    padding: 8px;
}

.file-count-label {
    font-size: 13px;
    margin-bottom: 16px;
    margin-top: 16px;
    color: #ccc;
}

.modal-buttons {
    flex-direction: row;
    justify-content: space-between;
}

.modal-cancel-button,
.modal-confirm-button {
    padding: 10px 18px;
    border-radius: 8px;
    font-size: 13px;
    border-color: transparent;
}

.modal-cancel-button {
    background-color: #444;
    color: white;
    border-color: transparent;
}

.modal-confirm-button {
    background-color: #ff6600;
    color: white;
    border-color: transparent;
}

.nav-button {
    width: 40px;
    height: 40px;
}

.title {
    font-size: 18px;
    -unity-text-align: middle-center;
}

.subtitle {
    font-size: 12px;
    -unity-text-align: middle-center;
}

.status-info-container {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px;
    background-color: #515151;
    border-radius: 8px;
    width: 50%;
    margin-bottom: 30px;
    align-self: center;
}

.status-info__icon {
    width: 34px;
    height: 42px;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_files.png");

    margin-top: 10px;
    margin-right: 20px;
    margin-bottom: 10px;
}

.status-info__divider {
    height: 2px;
    width: 80%;
    background-color: #3F3F3F;
    margin: 4px 0;
}

.status-info__title {
    font-size: 32px;
    color: white;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Bold.ttf");
    -unity-text-align: middle-center;
}

.status-info__label {
    font-size: 32px;
    color: white;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
}

.status-info__label {
    font-size: 18px;
    color: #BDBDBD;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Thin.ttf");
    -unity-text-align: middle-center;
}

.status-info-brief-container{
    margin-bottom: 5px;
}

.status-info_brief__label {
    font-size: 14px;
    color: #BDBDBD;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Thin.ttf");
    -unity-text-align: middle-center;
    margin-bottom: 2px;
}


.deselect-button{
    border-bottom-width: 1px;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
    border-bottom-color: white;
    border-top-color: transparent;
    border-left-color: transparent;
    border-right-color: transparent;
    background-color: transparent;
    border-radius: 0;
    padding: 0;
    margin: 0 10px 0 0;


}

