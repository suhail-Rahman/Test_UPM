/* ========== Common for all screens ========== */

:root {
    --sawyer-primary: #FF5722;
    --sawyer-primary-hover: #FF7043;
    --sawyer-primary-active: #E64A19;
    --sawyer-secondary: #444444;
    --sawyer-error: #F44336;
    --sawyer-success: #4CAF50;
    --sawyer-warning: #FFC107;
    --sawyer-text: #FFFFFF;
    --sawyer-text-secondary: #BBBBBB;
    --sawyer-background: #1E1E1E;
    --sawyer-card-background: #2D2D2D;
    --sawyer-input-background: #1B1B1B;
    --sawyer-border: #3E3E3E;
    
    --sawyer-border-radius: 4px;
    --sawyer-spacing-xs: 4px;
    --sawyer-spacing-sm: 8px;
    --sawyer-spacing-md: 16px;
    --sawyer-spacing-lg: 2px;
    --sawyer-spacing-xl: 32px;
    --sawyer-spacing-xxl: 48px;
}

