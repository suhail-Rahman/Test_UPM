.screen-container {
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    /*padding: var(--sawyer-spacing-lg);*/
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.model-selector-dropdown{
    background-color: transparent;
    border-width: 0;
    border-color: transparent;
}

.content-container {
    flex-direction: column;
    flex-grow: 1;
    width: 100%;
    height: 100%;
    transform-box: border-box;
}

#top-section {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 5%;
    margin-bottom: var(--sawyer-spacing-md);
}
.logo-wrapper {
    width: 100%;
    height: 80px; /* fallback default */
    max-height: 128px;
    min-height: 64px;

    align-items: center;
    justify-content: center;
    display: flex;
}

.logo-icon {
    width: 100%;
    height: 100%;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/mascot_fox.png");
    max-width: 120px;
    max-height: 120px;
    -unity-background-scale-mode: scale-to-fit;
}

.connect-screen-root {
    padding-top: 32px;
    padding-bottom: 32px;
    padding-left: 40px;
    padding-right: 40px;
    /*row-gap: 24px;*/
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.section {
    margin-top: 12px;
    margin-bottom: 12px;
    width: 100%;
}



