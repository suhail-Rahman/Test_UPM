/* Cards */

.header-container {
    flex-grow: 1;
    flex-shrink: 1;
    width: 100%;
    height: 150%;
    margin-top: 20%;
    justify-content: center;
    align-items: center;
    display: flex;
}
.header-container__welcome_screen {

    width: 100%;
    height: 50%;
    justify-content: center;
    align-items: center;
    display: flex;
}


.footer-area-bg {
    padding: 2px;
    display: flex;
    flex-direction: column;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/chat_bottom_bg.png");
}
.top-area-bg{
    padding: 2px;
    display: flex;
    flex-direction: column;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/top_area_bg.png");
    flex-grow: 1;
    position: absolute;
    width: 100%;
    height: 25%;
}

