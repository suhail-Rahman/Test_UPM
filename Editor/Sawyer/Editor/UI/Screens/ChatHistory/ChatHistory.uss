/* ChatHistory.uss */
:root {
    --background-color: #3F3F3F;
    --card-background: #2A2A2A;
    --header-background: #2A2A2A;
    --input-background: #2A2A2A;

    --text-primary: #FFFFFF;
    --text-secondary: #B3B3B3;

    --accent-color: #EC5B1F;
    --accent-color-hover: #b84910;

    --button-secondary: #515151;
    --button-secondary-hover: #323232;

    --delete-icon-color: #FFFFFF;
}

.root-container {
    flex-direction: column;
    width: 100%;
    height: 100%;
    display: flex;
    background-color: var(--background-color);
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/welcome_pattern.png");
    -unity-background-scale-mode: scale-and-crop;
}

.header-bar {
    background-color: var(--header-background);
    border-bottom-width: 1px;
    border-bottom-color: #444;
    padding: 10px 16px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    min-height: 40px;
}

.header-title {
    font-size: 18px;
    -unity-font-style: bold;
    color: var(--text-primary);
    flex-grow: 1;
}

.header-actions {
    flex-direction: row;
    align-items: center;
}

.back-button {
    width: 24px;
    height: 24px;
    background-color: transparent;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_back.png");
    -unity-background-scale-mode: scale-to-fit;
    border-width: 0;
    margin-right: 10px;
}

.delete-button {
    padding: 6px 12px;
    font-size: 14px;
    background-color: transparent;
    color: white;
    border-radius: 4px;
    border-width: 0;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_delete.png");
    -unity-background-scale-mode: scale-to-fit;
    width: 24px;
    height: 24px;
    margin-right: 0;
}

.search-section {
    background-color: var(--input-background);
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 10px 10px 10px 10px;
    border-radius: 4px;
    padding: 0 8px;
    flex-shrink: 0;
    height: 5%;
}

#search-input {
    flex-grow: 1;
    background-color: transparent;
    color: var(--text-primary);
    border-width: 0;
    margin: 0;
    padding: 0;
}

#search-input .unity-text-field__input {
    background-color: transparent;
    border-width: 0;
    padding: 8px;
    margin: 0;
}

#search-button {
    width: 24px;
    height: 24px;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_search.png");
    background-color: transparent;
    -unity-background-scale-mode: scale-to-fit;
    border-width: 0;
}

.time-group-header {
    font-size: 16px;
    color: var(--text-primary);
    margin: 12px 12px 8px 12px;
    -unity-font-style: bold;
}

.time-group-container {
    margin: 0 12px;
}

.history-item {
    background-color: var(--card-background);
    border-radius: 4px;
    padding: 12px 16px;
    margin-bottom: 8px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    cursor: link;
}

.history-item:hover {
    background-color: #4F4F4F;
}

.history-item__title {
    font-size: 14px;
    color: var(--text-primary);
    flex-grow: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-right: 12px;
}

.history-item__date {
    font-size: 12px;
    color: var(--text-secondary);
    width: 150px;
}

.delete-icon {
    width: 20px;
    height: 20px;
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_delete.png");
    background-color: transparent;
    -unity-background-scale-mode: scale-to-fit;
    border-width: 0;
    margin-left: -12px;
}