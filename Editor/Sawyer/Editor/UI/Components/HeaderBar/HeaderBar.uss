.header-bar {
    background-color: #3F3F3F;
    border-bottom-width: 2px;
    border-bottom-color:  #444;
    padding: 10px 16px;
    display: flex;
    align-items: center;
    flex-shrink: 0;
    min-height: 74px;
    max-height: 74px;
    flex-direction: row;
}

.header-title {
    font-size: 21px;
    -unity-font-style: bold;
    color: #ffffff;
    justify-content: center;
    margin-left: 15px;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Bold.ttf");
    padding-left: 1px;
    padding-right: 2px;
    -unity-text-align: middle-left;
    
}

.header-actions {
    display: flex; /* Uncomment this */
    margin: 10px 10px 10px 10px;
    align-items: center;
    flex-direction: row;
    flex-shrink: 0; /* Add this to prevent shrinking */
}

.newchat-button{
    display: none;
    border-radius: 4px;
    background-color: #2A2A2A;
    width: 110px;
    height: 32px;
    justify-content: space-between;
    -unity-text-align: middle-center;
    flex-direction: row;
    border-width: 0;
    padding-left: 7px;
    padding-bottom: 1px;
    padding-top: 1px;
}

.newchat-button-icon{
    background-image: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/icon_newchat.png");
    height: 22px;
    width: 20px;
    align-self: center;
    -unity-background-scale-mode: scale-to-fit;
}
.newchat-button-label{
    font-size: 15px;
    padding-left: 1px;
    padding-right: 2px;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Light.ttf");
    
}


.header-button-history {
    margin-left: 10px;
