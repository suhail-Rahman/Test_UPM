/* Status Button - Matches New Chat button style */
.status-button{
    display: none;
    border-radius: 4px;
    background-color: #2A2A2A;
    width: 90px;
    height: 32px;
    justify-content: space-between;
    -unity-text-align: middle-center;
    flex-direction: row;
    border-width: 0;
    padding-left: 10px;
    padding-right: 10px;
    padding-bottom: 1px;
    padding-top: 1px;
    align-items: center;
}

/* Green indicator dot */
.status-indicator{
    height: 8px;
    width: 8px;
    background-color: #4AFF4A;
    border-radius: 4px;
    align-self: center;
    margin-right: 6px;
}

.status-button-label{
    font-size: 15px;
    padding-left: 1px;
    padding-right: 2px;
    -unity-font: url("project://database/Packages/com.unakin.sawyer-ai/Editor/Sawyer/Resources/font/Inter_18pt-Light.ttf");
    flex-grow: 1;
}
